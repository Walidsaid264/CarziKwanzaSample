<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragments.PackageFragment"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="Packages"
            android:textColor="#db5a6b"
            android:textSize="30sp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="75dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#db5a6b"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="20dp"
                    android:text="Full Car-wash"
                    android:textSize="15sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:background="#00FFFFFF"
                    android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#db5a6b"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="20dp"
                android:text="Full Car Service"
                android:textSize="15sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:background="#00FFFFFF"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#db5a6b"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="20dp"
                android:text="Engine Check"
                android:textSize="15sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:background="#00FFFFFF"
                android:textColor="@color/black"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#3aa8c1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="Interior Accessories"
             />
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="Exterior Accessories"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="Fire Accessories"
            />


    </LinearLayout>
        <ImageView
            android:id="@+id/image1"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:src="@drawable/poster"
            android:background="@drawable/round_corner"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            />






    </LinearLayout>
</ScrollView>